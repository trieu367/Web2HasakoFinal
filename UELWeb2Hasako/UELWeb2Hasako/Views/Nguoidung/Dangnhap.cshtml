
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<br />
<h4 style="color:red;text-align:center">@ViewBag.ThongBao</h4>
    <div style="margin:0px 40% 1px 40%;"> <h2 style="text-align:center">ĐĂNG NHẬP THÀNH VIÊN</h2></div> 
    <table style="margin:0px 0px 1px 40%; ">

        @using (Html.BeginForm())

        {
            @Html.ValidationSummary(true)
            <tr style="height:40px;">
                <td>Tên đăng nhập:</td>
                <td style="padding-left:20px">
                    @Html.TextBox("Tendn")
                    @ViewData["Loi1"]
                </td>

            </tr>
            <tr style="height:40px">
                <td>Mật khẩu:</td>
                <td style="padding-left:20px">@Html.Password("Matkhau")  @ViewData["Loi2"]</td>

            </tr>
            <tr style="height:40px">
                <td></td>
                <td style="padding-bottom:20px">
                    <input type="submit" value="Đăng nhập" style="border:none;color:white;background-color:#0E8CE4; width:100px;height:30px" />
                </td>
            </tr>
        }
    </table>
