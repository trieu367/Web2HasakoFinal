
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<br />
<div style="margin:0px 40% 1px 40%" ;><h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2></div>

<table style="margin:0px 0px 1px 40%" ;>
    @using (Html.BeginForm())

    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td style="padding-left:20px">
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td style="padding-left:20px">@Html.TextBox("TenDN")  @ViewData["Loi2"]</td>

        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td style="padding-left:20px">@Html.Password("Matkhau")    @ViewData["Loi3"]</td>

        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại:</td>
            <td style="padding-left:20px">@Html.Password("Matkhaunhaplai") @ViewData["Loi4"]</td>

        </tr>

        <tr style="height:40px">
            <td>Số điện thoại:</td>
            <td style="padding-left:20px">@Html.TextBox("Dienthoai")  @ViewData["Loi5"]</td>

        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td style="padding-left:20px">@Html.TextBox("Email")  @ViewData["Loi6"]</td>

        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td style="padding-left:20px">@Html.TextBox("Diachi")  @ViewData["Loi7"]</td>

        </tr>
        <tr>
            <td></td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td><input type="submit" value="Đăng ký" style="border:none;color:white;background-color:#0E8CE4; width:100px;height:30px" /></td>
        </tr>
    }
</table>
